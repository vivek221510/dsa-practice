 All Nodes Distance K in Binary Tree
/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public List<Integer> distanceK(TreeNode root, TreeNode target, int k) {
        List<TreeNode> path = new ArrayList<>();
        List<Integer> result = new ArrayList<>();

        // Find path from root to target
        findPath(path, root, target);

        // Start from target node
        find(path.get(0), k, result);
        k--;

        // Traverse upward in path and search opposite subtrees
        for (int i = 1; i < path.size(); i++) {
            TreeNode curr = path.get(i);
            TreeNode prev = path.get(i - 1);

            if (k == 0) {
                result.add(curr.val);
                break;
            }

            if (curr.left == prev)
                find(curr.right, k - 1, result);
            else
                find(curr.left, k - 1, result);

            k--;
        }
        return result;
    }

    private boolean findPath(List<TreeNode> list, TreeNode root, TreeNode target) {
        if (root == null) return false;
        if (root == target || findPath(list, root.left, target) || findPath(list, root.right, target)) {
            list.add(root);
            return true;
        }
        return false;
    }

    private void find(TreeNode root, int k, List<Integer> result) {
        if (root == null) return;
        if (k == 0) {
            result.add(root.val);
            return;
        }
        find(root.left, k - 1, result);
        find(root.right, k - 1, result);
    }
}
